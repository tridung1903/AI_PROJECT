    <title>Test Tọa Độ Cắt Ảnh</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background: #f5f5f5;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .upload-area {
            background: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
        }
        .btn {
            padding: 10px 20px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 5px;
        }
        .btn:hover {
            background: #0056b3;
        }
        .results {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        .original-container, .segments-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
        }
        .section-title {
            margin-bottom: 15px;
            color: #333;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }
        #originalCanvas {
            max-width: 100%;
            border: 2px solid #007bff;
            border-radius: 5px;
        }
        .segments-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
        }
        .segment-item {
            text-align: center;
        }
        .segment-canvas {
            width: 100%;
            border: 2px solid #28a745;
            border-radius: 5px;
            margin-bottom: 5px;
        }
        .segment-info {
            font-size: 12px;
            color: #666;
        }
        .coordinates {
            margin-top: 20px;
            background: #f8f9fa;
